{
  "name": "nest-template",
  "version": "0.0.1",
  "description": "Nest.js Templates",
  "main": "index.js",
  "repository": "git@github.com:hieudoanm/nest-template.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16",
    "npm": ">= 8",
    "yarn": ">= 1"
  },
  "scripts": {
    "build:apis": "yarn workspace @nest-template/apis build",
    "dev:apis": "yarn workspace @nest-template/apis start:dev",
    "lint:apis": "yarn workspace @nest-template/apis lint",
    "test:apis": "yarn workspace @nest-template/apis test",
    "test:e2e:apis": "yarn workspace @nest-template/apis test:e2e",
    "build:graphql": "yarn workspace @nest-template/graphql build",
    "dev:graphql": "yarn workspace @nest-template/graphql start:dev",
    "lint:graphql": "yarn workspace @nest-template/graphql lint",
    "test:graphql": "yarn workspace @nest-template/graphql test",
    "test:e2e:graphql": "yarn workspace @nest-template/graphql test:e2e",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "husky": "8.0.3",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "services/*"
  ]
}
